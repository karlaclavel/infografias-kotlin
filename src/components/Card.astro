---
interface Props {
	title: string;
	body: string;
	img: string;
}

const { img, title, body } = Astro.props;

import '../styles/Card.css';
---

<div class="card">
  <div class="card-content">
    <h2>{title}</h2>
    <p>{body}</p>
  </div>
	<div class="img-content">
		<img src={img} alt={title} />
	</div>
</div>